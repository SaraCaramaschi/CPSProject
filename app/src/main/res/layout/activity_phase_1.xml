<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/icProtocol"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="56dp"
        android:layout_marginTop="76dp"
        android:src="@drawable/clipboard2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPhase1"
        android:layout_width="460dp"
        android:layout_height="95dp"
        android:layout_marginTop="100dp"
        android:text="@string/protocol_phase_1"
        android:textColor="@color/color3"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textSize="40dp" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="773dp"
        android:layout_height="306dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="244dp"
        android:background="@drawable/shape_background"
        android:foregroundGravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDescription1One"
            android:layout_width="707dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:text="@string/phase_1_description_1"
            android:textColor="@color/color1"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPhase1" />

        <TextView
            android:id="@+id/tvDescription1Two"
            android:layout_width="707dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:text="@string/phase_1_description_2"
            android:textColor="@color/color1"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription1One" />

        <TextView
            android:id="@+id/tvDescription1Three"
            android:layout_width="707dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="18dp"
            android:text="@string/phase_1_description_3"
            android:textColor="@color/color1"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription1Two" />

        <TextView
            android:id="@+id/tvDescription1Four"
            android:layout_width="707dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="18dp"
            android:text="@string/phase_description_dwn"
            android:textColor="@color/color1"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription1Three" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSelectPh1"
        android:layout_width="329dp"
        android:layout_height="54dp"
        android:layout_marginTop="392dp"
        android:text="@string/select_the_test"
        android:textColor="@color/color5"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhase1" />

    <Button
        android:id="@+id/btnEx1Ph1"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/color4"
        android:text="@string/exercise_1"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectPh1" />

    <Button
        android:id="@+id/btnEx2Ph1"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/color4"
        android:text="@string/exercise_2"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEx1Ph1" />

    <Button
        android:id="@+id/btnEx3Ph1"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/color4"
        android:text="@string/exercise_3"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEx2Ph1" />

    <Button
        android:id="@+id/btnBackToPatientPage1"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/color1"
        android:text="@string/back_to_patient_page"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>