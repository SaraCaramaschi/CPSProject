<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/color2"
    >


    <Button
        android:id="@+id/btnSubmitdata"
        android:layout_width="220dp"
        android:layout_height="95dp"
        android:layout_marginBottom="208dp"
        android:backgroundTint="@color/strings"
        android:text="@string/submit"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="76dp"
        android:src="@drawable/stethoscope1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <LinearLayout
        android:layout_width="446dp"
        android:layout_height="148dp"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.725"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvNewClinician"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/new_clinician"
            android:textColor="@color/color3"
            android:textSize="40dp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fill_up_all_the_requested_information"
            android:textColor="@color/color5"
            android:textSize="30dp"
            app:layout_constraintStart_toEndOf="@+id/tvNewClinician" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutItems"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/shape_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmitdata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayout0"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp">/

            <TextView
                android:id="@+id/idName"
                android:layout_width="100dp"
                android:layout_height="39dp"
                android:inputType="text"
                android:text="@string/name"
                android:textColor="@color/color1"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/strings"
                android:textColor="@color/color1"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/idName"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayout0"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp">/

            <TextView
                android:id="@+id/idSurname"
                android:layout_width="100dp"
                android:layout_height="39dp"
                android:inputType="text"
                android:text="Surname"
                android:textColor="@color/color1"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/etSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/strings"
                android:textColor="@color/color1"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/idName"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayout0"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="100dp"
                android:layout_height="39dp"
                android:inputType="text"
                android:text="@string/e_mail"
                android:textColor="@color/color1"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/strings"
                android:textColor="@color/color1"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/idName"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayout0"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp">

            <TextView
                android:id="@+id/tvPassword1"
                android:layout_width="100dp"
                android:layout_height="39dp"
                android:inputType="text"
                android:text="@string/password"
                android:textColor="@color/color1"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/etPassword1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/strings"
                android:inputType="textPassword"
                android:textColor="@color/color1"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/idName"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayout0"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp">

            <TextView
                android:id="@+id/tvPassword2"
                android:layout_width="199dp"
                android:layout_height="39dp"
                android:inputType="text"
                android:text="@string/confirm_password"
                android:textColor="@color/color1"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/etPassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/strings"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/idName"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>